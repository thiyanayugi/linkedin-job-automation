# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (optional, default: gpt-4-mini)
OPENAI_MODEL=gpt-4-mini

# Google Sheets Configuration (required)
GOOGLE_SHEETS_CREDENTIALS_FILE=config/google_credentials.json
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Telegram Configuration (optional - for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
ENABLE_TELEGRAM=false

# Job Search Configuration
MIN_SCORE_THRESHOLD=50
MAX_JOBS_PER_RUN=25

# Schedule Configuration (24-hour format, e.g., 17:00 for 5 PM)
SCHEDULE_TIME=17:00
ENABLE_SCHEDULE=false

# Request Configuration
REQUEST_DELAY_SECONDS=10
MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Resume Path
RESUME_PATH=data/resume.pdf
